<!DOCTYPE html>
<html>
  <head>
    <title>Project Dive Bomb</title>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Contrail+One" />
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Contrail+One" />
    <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
  </head>

  <body>

  <div class="top-bar">
    <div class="top-bar-title">
      <h1><%=link_to "PROJECT DIVE BOMB FUCK Y'ALL", root_path%></h1>
    </div>
    <div class="top-bar-right">
      <% if request.env['PATH_INFO'] != "/users/sign_up" && request.env['PATH_INFO'] != "/users/sign_in" && request.env['PATH_INFO'] != "/users/edit" %>
        <% if user_signed_in? %>
          <div class="top-bar-link">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
          </div>
          <div class="top-bar-link">
            <%= link_to "My Account", edit_user_registration_path %>
          </div>
        <% else %>
          <div class="top-bar-link">
            <div class="top-bar-link">
              <%= link_to "Sign In", new_user_session_path %>
            </div>
            <div class="top-bar-link">
              <%= link_to "Sign Up", new_user_registration_path %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if current_user %>
        <% if current_user.admin? %>
          <div class="top-bar-link">
            <%=link_to "Create Bar", new_bar_path %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="flash">
    <% if flash[:notice] %>
      <% if flash[:notice].is_a?(String) %>
        <%= flash[:notice] %>
      <% else %>
        <% flash[:notice].each do |key, value| %>
          <% if value.is_a?(Array) %>
            <% value.each do |error| %>
              <%= "#{key.capitalize} #{error}." %>
            <% end %>
          <% else %>
            <%= "#{key.capitalize} #{value}." %>
          <% end %>
          <br />
        <% end %>
      <% end %>
    <% end %>

    <% unless flash[:notice] %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <% end %>
    <% end %>
  </div>
  <%= yield %>

  </body>
</html>
